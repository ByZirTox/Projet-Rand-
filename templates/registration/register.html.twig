{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<body class="bg-primary">
		<div class="container mt-5 p-5 bk-register ">
			<h1 class="title-register fw-bold text-info">S'inscrire</h1>
			<div class="bk-form bg-light py-4 d-flex flex-column justify-content-around align-items-center">
				{{ form_start(registrationForm) }}

				<div class="form-group py-4 w-100 m-auto d-flex flex-column gap-3">
					{{ form_label(registrationForm.firstname, 'Pr√©nom') }}
					{{ form_widget(registrationForm.firstname, {'attr':{'class':'form-control'}}
					) }}
					{{ form_errors(registrationForm.firstname, {'attr':{'class':'form-control'}}
					) }}

					{{ form_label(registrationForm.lastname, 'Nom') }}
					{{ form_widget(registrationForm.lastname, {'attr':{'class':'form-control'}}
					) }}
					{{ form_errors(registrationForm.lastname, {'attr':{'class':'form-control'}}
					) }}


					{{ form_label(registrationForm.email, 'Email') }}
					{{ form_widget(registrationForm.email, {'attr':{'class':'form-control'}}
					) }}
					{{ form_errors(registrationForm.email, {'attr':{'class':'form-control'}}
					) }}


					{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
					{{ form_widget(registrationForm.plainPassword, {'attr':{'class':'form-control'}}
					) }}
					{{ form_errors(registrationForm.plainPassword, {'attr':{'class':'form-control'}}
					) }}


					{{ form_row(registrationForm.agreeTerms) }}
				</div>
			</div>

			<div class="d-flex justify-content-evenly">
				<button type="submit" class="btn bg-light fw-bold mt-3 w-25">S'inscrire</button>
				{{ form_end(registrationForm) }}
				<a href="/login" class="text-decoration-none btn bg-info mt-3 w-25 ml-5 fw-bold ">Retour</a>
			</div>
		</div>
	</body>
{% endblock %}
